<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    card_view:cardUseCompatPadding="true"
    android:layout_height="200dp"
    card_view:cardCornerRadius="0dp"
    card_view:contentPadding="10dp"
    >

    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="match_parent"
        android:background="#ECEFF1">

        <ImageView
            android:id="@+id/details_imageView"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="ppp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="213dp"
            android:layout_height="32dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="25dp"
            android:layout_marginEnd="7dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/minus"
                android:src="@drawable/ic_minus"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/selected_count"
                android:text="0"
                android:layout_width="15dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/plus"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_plus"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="211dp"
            android:layout_height="95dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <Spinner
                android:id="@+id/quantity"
                style="@style/AppTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:entries="@array/product_quantity"
                android:padding="5dp"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/mrp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MRP : 110 Rs"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_discount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/user_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="202dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="23dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Name : " />

            <TextView
                android:id="@+id/ImageNameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time" />
        </LinearLayout>

        <TextView
            android:id="@+id/imageStringName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="TextView" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>